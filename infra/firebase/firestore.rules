rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ==================== Helper Functions ====================

    function isAuthenticated() {
      return request.auth != null;
    }

    function userId() {
      return request.auth.uid;
    }

    function isStoreOwner(storeId) {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/stores/$(storeId)) &&
        get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == userId();
    }

    function belongsToOwnedStore(resource) {
      return isAuthenticated() &&
        resource.data.storeId != null &&
        isStoreOwner(resource.data.storeId);
    }

    // ==================== Stores ====================

    match /stores/{storeId} {
      allow read: if isAuthenticated() && resource.data.ownerId == userId();

      allow create: if isAuthenticated() &&
        request.resource.data.ownerId == userId() &&
        request.resource.data.status == 'ACTIVE' &&
        request.resource.data.deletedAt == null;

      allow update: if isAuthenticated() &&
        resource.data.ownerId == userId() &&
        request.resource.data.ownerId == userId();

      allow delete: if isAuthenticated() && resource.data.ownerId == userId();
    }

    // ==================== Models ====================

    match /models/{modelId} {
      allow read: if belongsToOwnedStore(resource);

      allow create: if isAuthenticated() &&
        isStoreOwner(request.resource.data.storeId) &&
        request.resource.data.status == 'CALIBRATING' &&
        request.resource.data.deletedAt == null;

      allow update: if belongsToOwnedStore(resource) &&
        request.resource.data.storeId == resource.data.storeId;

      allow delete: if belongsToOwnedStore(resource);
    }

    // ==================== Assets ====================

    match /assets/{assetId} {
      allow read: if belongsToOwnedStore(resource);

      allow create: if isAuthenticated() &&
        isStoreOwner(request.resource.data.storeId) &&
        request.resource.data.uploadedBy == userId() &&
        request.resource.data.deletedAt == null;

      allow update: if belongsToOwnedStore(resource) &&
        request.resource.data.storeId == resource.data.storeId &&
        request.resource.data.uploadedBy == resource.data.uploadedBy;

      allow delete: if belongsToOwnedStore(resource);
    }
  }
}
