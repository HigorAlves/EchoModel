		"firebase-admin": "^13.6.0",
		"firebase-functions": "^7.0.0",
		"zod": "^3.24.4"
	},
	"devDependencies": {
		"@foundry/typescript-config": "*",
		"@types/node": "^24.0.6",
		"tsdown": "^0.14.1",
		"typescript": "^5.9.2"
	}
