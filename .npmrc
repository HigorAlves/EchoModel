# NPM configuration for enterprise monorepo

# Automatically install peer dependencies
auto-install-peers = true

# Save exact versions for better reproducibility
save-exact = true

# Increase network timeout to prevent hanging installations
network-timeout = 300000

# Disable update notifications
update-notifier = false

# Set registry URL
registry = https://registry.npmjs.org/

# Enable strict SSL
strict-ssl = true

# Disable audit reports in CI environments
audit = false

# Set default access level for published packages
access = public

# Enable progress bar
progress = true

# Set log level
loglevel = warn
