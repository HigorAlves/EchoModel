{
	"name": "@foundry/application",
	"version": "1.0.0",
	"description": "Application layer implementing CQRS, Use Cases, and Ports & Adapters for hexagonal architecture",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"license": "ISC",
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"check-types": "tsc --noEmit",
		"test:unit": "vitest run .test.ts"
	},
	"author": {
		"email": "me@higoralves.dev",
		"name": "Higor Alves",
		"url": "https://higoralves.dev"
	},
	"dependencies": {
		"@foundry/domain": "*",
		"jose": "^6.1.3",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@foundry/typescript-config": "*",
		"@foundry/vitest-config": "*",
		"@types/node": "^24.0.6",
		"tsdown": "^0.14.1",
		"typescript": "^5.8.3",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4"
	}
}
